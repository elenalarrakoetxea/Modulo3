@model IEnumerable<ProyectoFinalModulo3.Models.Film>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    foreach (Film film in Model)
    {
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src=@Url.Content(film.Image) class="card-img" title="@film.Title">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@film.Title</h5>
                        <p class="card-text">@film.Synopsis</p>
                        <p class="card-text"><small class="text-muted">@film.RecommendedAge</small></p>
                    </div>
                </div>
            </div>
        </div>
    }
}